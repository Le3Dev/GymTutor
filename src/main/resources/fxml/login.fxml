<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gymtutor.gymtutor.security.FxLoginController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <Label text="Login" style="-fx-font-size: 20px; -fx-text-fill: #7d0022;"/>

    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Senha" />

    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #7d0022; -fx-text-fill: white;"/>

    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox>